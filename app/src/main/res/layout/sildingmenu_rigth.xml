<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/login_background_introduce"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/silpingmenu_left_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_weibo_selector" />

        <ImageView
            android:id="@+id/silpingmenu_left_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_qq_selector" />


        <ImageView
            android:id="@+id/silpingmenu_left_tencent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_tencent_selector" />


    </LinearLayout>

</LinearLayout>
