<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="100dp">


    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/tabfragment_adapter_image_moddle_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            />

        <TextView
            android:textColor="@color/textColor"
            android:padding="5dp"
            android:id="@+id/tabfragment_adapter_image_moddle_tv_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="源"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/tabfragment_adapter_image_moddle_iv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />
    <TextView
        android:id="@+id/tabfragment_adapter_image_moddle_tv_delete"
        android:textColor="@color/textColor"
        android:gravity="right"
        android:text="删除"
        android:textSize="10dp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>