<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="100dp">

    <TextView
        android:textColor="@color/textColor"
        android:layout_weight="1"
        android:id="@+id/tabfragment_adapter_image_small_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题"
        />
    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tabfragment_adapter_image_small_iv_left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/tabfragment_adapter_image_small_iv_moddle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/tabfragment_adapter_image_small_iv_right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:textColor="@color/textColor"
        android:layout_weight="1"
        android:id="@+id/tabfragment_adapter_image_small_tv_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="源"
        />

</LinearLayout>